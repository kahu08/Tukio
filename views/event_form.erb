<h2>Update the <%=@event.organization() %>'s <%=@event.event_name() %> event </h2>


<div class="">
    <form class=" event_form" action="/event/edit/<%= @event.id()%>" method="post">


      <input name="_method" type="hidden" value="patch">
      <div class="form-group">
			<label>
				<input type="text" name="organization" id="organization" value = "<%= @event.organization()%>">
				<div class="label-text">
					Organization (sponsors)
				</div>
			</label>
		</div>

		<div class="form-group">
			<label>
				<input type="text" name="event_name" id="event_name" value = "<%= @event.event_name()%>">
				<div class="label-text">
					Event Name
				</div>
			</label>
		</div>

		<div class="form-group">
			<label>
				<input type="text" name="location" id="location" value = "<%= @event.location()%>">
				<div class="label-text">
					Location
				</div>
			</label>
		</div>


		<div class="form-group">
			<label>
				<input type="text" name="fee" id="fee" value = "<%= @event.fee()%>">
				<div class="label-text">
					Fee
				</div>
			</label>
		</div>

		<div class="form-group">
			<label>
				<input type="text" name="time" id="time" value = "<%= @event.time()%>">
				<div class="label-text">
					Date and Time
				</div>
			</label>
		</div>

      <button type="submit">Update</button>
      <button type="submit">Delete event</button>
    </form>
  </div>

<form action="/event/edit/<%= @event.id()%>" method="post">
    <input name="_method" type="hidden" value="delete">

  </form>
